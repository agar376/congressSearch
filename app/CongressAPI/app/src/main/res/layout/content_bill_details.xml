<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_bill_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shobhitagarwal.congressapi.BillDetails"
    tools:showIn="@layout/activity_bill_details">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favBill"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/grey_star" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="60dp">

                <TableLayout
                    android:id="@+id/BillTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/bid"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Bill ID:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_id"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/bt"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Title:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_title"
                            android:layout_width="80dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:width="20dp"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/btype"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Bill Type:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_type"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/sp"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Sponsor:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_sponsor"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/bchamber"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Chamber:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_chamber"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/bstatus"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Status:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_status"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/bintro"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="Introduced On:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_intro"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/bcu"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Congress URL:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_congress_url"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:width="20dp"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/bversion"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Version Status:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_version"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/burl"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Bill URL:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/bill_url"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:width="20dp"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
