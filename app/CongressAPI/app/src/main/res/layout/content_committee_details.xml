<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_committee_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.shobhitagarwal.congressapi.CommitteeDetails"
    tools:showIn="@layout/activity_committee_details">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favCom"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/grey_star" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="60dp">


                <TableLayout
                    android:id="@+id/comTable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/cid"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Committee ID:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/committee_id"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/cname"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Name:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/com_name"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/cc"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Chamber:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/relativeProgress"
                            android:layout_width="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/com_chamberImg"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:gravity="right" />

                            <TextView
                                android:id="@+id/com_chamber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_column="2"
                                android:gravity="right"
                                android:text="N.A."
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="#3C3C3C"
                                 />

                        </LinearLayout>
                    </TableRow>


                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/cparent"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Parent Committee:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/parent"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/ccontact"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:text="Contact:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/com_contact"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="1.0">

                        <TextView
                            android:id="@+id/co"
                            android:layout_width="10dp"
                            android:layout_column="1"
                            android:layout_weight=".48"
                            android:gravity="left"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="Office:"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#000"
                            
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/com_office"
                            android:layout_width="10dp"
                            android:layout_column="2"
                            android:layout_weight=".48"
                            android:gravity="right"
                            android:text="N.A."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="#3C3C3C"
                             />
                    </TableRow>

                </TableLayout>

            </LinearLayout>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
